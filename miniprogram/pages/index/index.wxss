.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #1a1a1a;
  min-height: 100vh;
}

.title {
  font-size: 36px;
  color: #ffffff;
  margin-bottom: 40px;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.buttons {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.btn-primary, .btn-secondary {
  width: 100%;
  padding: 15px;
  border-radius: 8px;
  font-size: 18px;
}

.btn-primary {
  background-color: #2ecc71;
  color: white;
}

.btn-secondary {
  background-color: #3498db;
  color: white;
}

.join-form {
  width: 80%;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.join-form input {
  padding: 12px;
  border-radius: 6px;
  background-color: #ffffff;
}

.btn-confirm {
  background-color: #e74c3c;
  color: white;
  padding: 12px;
  border-radius: 6px;
}
